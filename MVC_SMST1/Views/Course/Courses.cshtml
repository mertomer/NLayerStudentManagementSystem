@model IEnumerable<CourseDto>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
        }

        .table-container {
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .table-container h2 {
                text-align: center;
                color: #007bff;
                margin-bottom: 30px;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
    </style>
    <title>Kurs Listesi</title>
</head>
<body>
    <div class="container mt-5">
        <div class="table-container">
            <h2>Kurs Listesi</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Kurs Adı</th>
                        <th>Ücret (TL)</th>
                        <th>Süre (Hafta)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.CourseName</td>
                            <td>@course.Fees.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))</td>
                            <td>@course.Duration</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Course/AddCourse" class="btn btn-success w-100">Yeni Kurs Ekle</a>
        </div>
    </div>
</body>
</html>
