@model TeacherDto

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
        }

        .form-container {
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .form-container h2 {
                text-align: center;
                color: #28a745;
                margin-bottom: 30px;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
    </style>
    <title>Öğretmen Ekle</title>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="form-container col-md-6">
            <h2>Öğretmen Ekle</h2>
            <form method="post" action="/Teacher/AddTeacher">
                <div class="mb-3">
                    <label for="tname" class="form-label">Öğretmen Adı</label>
                    <input type="text" class="form-control" id="tname" name="TName" value="@Model?.TName" required>
                </div>
                <div class="mb-3">
                    <label for="education" class="form-label">Eğitim Bilgisi</label>
                    <input type="text" class="form-control" id="education" name="Education" value="@Model?.Education">
                </div>
                <div class="mb-3">
                    <label for="courseID" class="form-label">Kurs Seçin</label>
                    <select class="form-control" id="courseID" name="CourseID">
                        @if (ViewBag.Courses != null)
                        {
                            @foreach (var course in ViewBag.Courses)
                            {
                                if (course.CourseID == Model?.CourseID)
                                {
                                    <option value="@course.CourseID" selected="selected">@course.CourseName</option>
                                }
                                else
                                {
                                    <option value="@course.CourseID">@course.CourseName</option>
                                }
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success w-100">Ekle</button>
                <a href="/Teacher/Teachers" class="btn btn-primary w-100 mt-2">Öğretmen Listesi</a>
            </form>
        </div>
    </div>
</body>
</html>
