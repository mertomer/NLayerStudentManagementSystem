@model IEnumerable<TeacherDto>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
        }

        .table-container {
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .table-container h2 {
                text-align: center;
                color: #007bff;
                margin-bottom: 30px;
            }
    </style>
    <title>Öğretmen Listesi</title>
</head>
<body>
    <div class="container mt-5">
        <div class="table-container">
            <h2>Öğretmen Listesi</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Öğretmen Adı</th>
                        <th>Eğitim Bilgisi</th>
                        <th>Eğitim Verdiği Kurs</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model)
                    {
                        <tr>
                            <td>@teacher.TName</td>
                            <td>@teacher.Education</td>
                            <td>@teacher.CourseID</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Teacher/AddTeacher" class="btn btn-success w-100">Yeni Öğretmen Ekle</a>
        </div>
    </div>
</body>
</html>

