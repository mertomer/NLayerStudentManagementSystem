<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - MyMVCApp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    @if (ViewBag.ShowNavbar == null || ViewBag.ShowNavbar == true)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">MyMVCApp</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Öğrenciler Menüsü -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="Students">Öğrenci Listele</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Student/AddStudent" class="nav-link">Yeni Öğrenci Ekle</a>
                    </li>

                    <!-- Öğretmenler Menüsü -->
                    <li class="nav-item">
                        <a href="/Teacher/Teachers" class="nav-link">Öğretmen Listele</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Teacher/AddTeacher" class="nav-link">Yeni Öğretmen Ekle</a>
                    </li>

                    <!-- Kurslar Menüsü -->
                    <li class="nav-item">
                        <a href="/Course/Courses" class="nav-link">Kurs Listele</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Course/AddCourse" class="nav-link">Yeni Kurs Ekle</a>
                    </li>
                </ul>
            </div>
        </nav>
    }

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer bg-light mt-4 py-3">
        <div class="container">
            <p class="text-muted mb-0 text-center">&copy; 2024 - MyMVCApp</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>
</html>
